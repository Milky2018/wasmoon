///|
/// Display available compiler settings
fn run_settings() -> Unit {
  println("Wasmoon Compiler Settings")
  println("=".repeat(60))
  println("")
  println("== Optimization Levels (-O) ==")
  println("  0  No optimization")
  println("     - Fastest compilation, easiest debugging")
  println("     - IR is not modified after translation")
  println("")
  println("  1  Basic optimizations")
  println("     - Constant folding")
  println("     - Copy propagation")
  println("     - Common subexpression elimination (CSE)")
  println("     - Dead code elimination (DCE)")
  println("")
  println("  2  Default optimizations (default)")
  println("     - All O1 optimizations, plus:")
  println("     - Branch simplification")
  println("     - Unreachable code elimination")
  println("     - Basic block merging")
  println("     - Jump threading")
  println("")
  println("  3  Aggressive optimizations")
  println("     - All O2 optimizations, plus:")
  println("     - Loop invariant code motion (LICM)")
  println("     - Loop unrolling (factor 2)")
  println("     - Strength reduction (mul/div by power of 2)")
  println("")
  println("== Specific Optimization Flags (--opt KEY=VALUE) ==")
  println("  const-fold       Constant folding")
  println("  copy-prop        Copy propagation")
  println("  cse              Common subexpression elimination")
  println("  dce              Dead code elimination")
  println("  branch-simplify  Branch simplification")
  println("  unreachable-elim Unreachable code elimination")
  println("  block-merge      Basic block merging")
  println("  jump-thread      Jump threading")
  println("  licm             Loop invariant code motion")
  println("  loop-unroll      Loop unrolling")
  println("  strength-reduce  Strength reduction")
  println("")
  println(
    "  Example: wasmoon compile --O 2 --opt licm=true --opt loop-unroll=true",
  )
  println("")
  println("== Debug Options (-D KEY[=VALUE]) ==")
  println("  verbose        Enable verbose output")
  println("  print-ir       Print IR after translation")
  println("  print-vcode    Print VCode after lowering")
  println("  print-regalloc Print VCode after register allocation")
  println("  trace-exec     Trace execution (each instruction)")
  println("")
  println("  Example: wasmoon run -D verbose -D print-ir module.wasm")
  println("")
  println("== WASM Semantic Options (-W KEY=VALUE) ==")
  println("  max-memory=N     Maximum memory pages (64KB each), 0 = no limit")
  println("  max-table=N      Maximum table size, 0 = no limit")
  println("  max-call-depth=N Maximum call stack depth (default: 1000)")
  println("  multi-value      Multi-value returns (default: true)")
  println("  bulk-memory      Bulk memory operations (default: true)")
  println("  reference-types  Reference types (default: true)")
  println("  simd             SIMD v128 support (default: false)")
  println("  tail-call        Tail call optimization (default: false)")
  println("")
  println("  Example: wasmoon run -W max-memory=100 -W simd=true module.wasm")
  println("")
  println("== Target Architectures ==")
  println("  aarch64  ARM 64-bit (default)")
  println("  x86_64   Intel/AMD 64-bit (planned)")
  println("")
  println("== File Formats ==")
  println("  .wasm   WebAssembly binary format")
  println("  .wat    WebAssembly text format")
  println("  .wast   WebAssembly test script format")
  println("  .cwasm  Precompiled WebAssembly module")
  println("")
  println("=".repeat(60))
}
